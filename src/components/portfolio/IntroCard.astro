---
import website from '@/website.config';
import { Image } from 'astro:assets';
import Button from './Button.astro';
import Card from './card/index.astro';
---

<Card colSpan={3} rowSpan={4}>
	<section class="intro" aria-label="Introduction">
		<div class="intro__container">
			<div class="intro__header">
				<h6>welcome</h6>
				<p>
					I'm <b style="font-weight: 700">Jonathon Reese Perry</b>, a software developer with a passion for user
					experience, animations and micro interactions
				</p>
			</div>
			<div class="intro__links">
				<a class="link" href={website.githubPage} aria-label="github profile" target="_blank">
					<Button aria-label="github profile">
						<span class="github" style="display: block; height: 1.5rem; width: 1.25rem"></span>
						<span data-sr-only>GitHub Profile</span>
					</Button>
				</a>
				<a class="link" href={website.linkedinProfile} aria-label="linkedin profile" target="_blank">
					<Button aria-label="linkedin profile">
						<span class="linkedin" style="display: block; height: 1.5rem; width: 1.25rem"></span>
						<span data-sr-only>Linkedin Profile</span>
					</Button>
				</a>
			</div>
		</div>
		<Image
			width="300"
			height="300"
			src="/me.png"
			format="webp"
			class="intro__image"
			alt="bitmoji of Jonathon Reese Perry"
			loading="eager"
			decoding="auto"
		/>
	</section>
</Card>

<style lang="scss">
	.intro {
		display: flex;
		width: 100%;
		height: 100%;

		&__container {
			display: flex;
			flex-direction: column;
			justifiy-content: space-between;
			gap: 1rem;

			@media (min-width: 768px) {
				max-height: 300px;
			}
		}

		&__header {
			display: flex;
			flex-direction: column;
			height: 100%;

			h6 {
				font-size: 0.875rem;
				line-height: 1.25rem;
				font-weight: 300;
				margin: 0;
				// color: rgb(115 115 115 / var(--text-opacity, 1));
				// color: var(--gray-500);
				color: color-mix(in srgb, var(--text-color) 20%, var(--primary-color));
			}

			p {
				margin: 0;
				font-weight: 300;
				font-size: 1.25rem;
				line-height: 1.75rem;
			}
		}

		&__links {
			display: flex;
			gap: 1rem;

			& .link {
				color: inherit;
			}
		}

		&__image {
			width: auto;
			max-height: 300px;
			user-select: none;
			position: absolute;
			right: -30px;
			bottom: -40px;
			z-index: -1;
			opacity: 50%;
			pointer-events: none;

			@media (min-width: 768px) {
				opacity: 100%;
				position: relative;
				right: auto;
				bottom: auto;
				z-index: auto;
			}
		}
	}
</style>
