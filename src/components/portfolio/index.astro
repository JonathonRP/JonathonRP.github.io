---
import website from "@/website.config";
import SEO from '../SEO/index.svelte';
import AboutMe from "./AboutMe.astro";
import ContactsCard from "./ContactsCard.astro";
import IntroCard from "./IntroCard.astro";
import Now from './Now.astro';

import ProjectsGallery from './projects/index.astro';

const pageTitle = 'Portfolio',
	metadescription = 'Portfolio Showcase',
	slug = Astro.url.origin,
	{ author } = website;

const breadcrumbs = [
	{
		name: pageTitle,
		slug,
	},
];

const entityMeta = {
	url: slug,
	faviconWidth: 512,
	faviconHeight: 512,
	caption: author,
};

const seo = {
	article: false,
	title: pageTitle,
	slug,
	entityMeta,
	breadcrumbs,
	metadescription,
};
---

<div class="full-width bento-box">
	<SEO {...seo} client:load />
	<IntroCard />
	<AboutMe />
	<ContactsCard />
	<!-- projects -->
	<Now />
</div>
<ProjectsGallery />

<style lang="scss" is:global>
    @use 'sass:string' as *;

	$base-colors: (
		gray-50: #FAFAFA,
		gray-100: #f5f5f5,
		gray-200: #e5e5e5,
		gray-300: #d4d4d4,
		gray-400: #a3a3a3,
		gray-500: #737373,
		gray-600: #525252,
		gray-700: #404040,
		gray-800: #262626,
		gray-900: #171717,
		darkslate-50: #3D3D3D,
		darkslate-100: #2C2C2C,
		darkslate-200: #262626,
		darkslate-300: #202020,
		darkslate-400: #1A1A1A,
		darkslate-500: #171717 /* Exactly your example for the background */,
		darkslate-600: #141414,
		darkslate-700: #111111,
		darkslate-800: #0E0E0E,
		darkslate-900: #0B0B0B /* Deeper and darker */,
		primary-100: #F9CDD3,
		primary-200: #F3A3AA,
		primary-300: #EC7981,
		primary-400: #E64F59,
		primary-500: #E63946,
		primary-600: #CF2F3D,
		primary-700: #B82534,
		primary-800: #A01B2B,
		primary-900: #891321,
	);

	:root {
		@each $color, $value in $base-colors {
			--#{$color}: #{$value};
		}
	}

	h1,
	h2,
	h3,
	h4,
	h5,
	h6 {
		// font-family: quote('Merriweather Sans'), sans-serif;
		font-family: quote('Playfair Display'), serif;
		-ms-text-size-adjust: 100%;
		-moz-text-size-adjust: 100%;
		-webkit-text-size-adjust: 100%;
		text-size-adjust: 100%;
		font-optical-sizing: auto;
		font-style: normal;
	}

	main {
		// font-family: quote('Newsreader'), serif;
        // font-family: quote('Noto Serif');
		font-family: quote('Lora'), serif;
		// font-family: quote('Merriweather');

		// -ms-text-size-adjust: 100%;
		// -moz-text-size-adjust: 100%;
		// -webkit-text-size-adjust: 100%;
		// text-size-adjust: 100%;
        font-style: normal;
        font-weight: 400;
	}

	.bento-box {
		color: var(--text-color);
		margin: auto;
		padding: 0.5rem;
		display: grid;
		gap: 0.5rem;
		max-width: 72rem;
		overflow: hidden;
		position: relative;
		width: 100%;
		margin-bottom: calc(100dvh - 900px);

		@media (min-width: 640px) {
			padding: 1rem;
		}

		@media (min-width: 768px) {
			grid-template-columns: repeat(2, minmax(0, 1fr));
			gap: 0.75rem;
			padding: 1.5rem;
		}

		// @media (min-width: 900px) {
		// 	margin-bottom: calc(100dvh - 864px);
		// }

		@media (min-width: 1024px) {
			height: 100vh;
			grid-template-rows: repeat(8, minmax(0, 1fr));
			grid-template-columns: repeat(4, minmax(0, 1fr));
			gap: 1rem;
			max-height: 800px;
			margin-block-end: calc(100dvh - 800px);
		}
	}

	// .bento-box {
	// 	display: grid;
	// 	// grid-template-rows: subgrid;
	// 	// grid-template-columns: subgrid;
	// 	width: 100%;
	// 	height: 100dvh;
	// }
</style>