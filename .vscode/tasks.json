{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "deno: task dev",
            "type": "deno",
            "isBackground": true,
            "command": "task",
            "args": [
                "dev"
            ],
            "env": {
                "Stage": "Developement"
            },
            "problemMatcher": [
                "$deno"
            ]
        },
        {
            "label": "kill",
            "command": "echo ${input:terminate}",
            "type": "shell",
            "problemMatcher": []
        },
    ],
    "inputs": [
        {
            "id": "terminate",
            "type": "command",
            "command": "workbench.action.tasks.terminate",
            "args": "dev"
        }
    ]
}