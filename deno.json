{
    "lint": {
        "include": ["src/", "./**/*.ts"],
        "rules": {
            "tags": ["recommended"],
            "include": ["ban-untagged-todo"],
            "exclude": ["no-unused-vars"]
        }
    },
    "fmt": {
        "useTabs": true,
        "lineWidth": 120,
        "indentWidth": 2,
        "semiColons": true,
        "singleQuote": true,
        "proseWrap": "preserve",
        "include": ["src/", "./**/*.ts"]
    },
    "unstable": ["byonm", "fmt-component"]
}